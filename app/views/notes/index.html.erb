<% @notes.each do |note| %>
<div>
  <%= link_to note_path(note.id) do %>
    <%= attachment_image_tag note, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag('sample-author1.jpg') %></p>
  <p>タイトル：<%= note.title %></p>
  <p>本文：<%= note.body %></p>
  <p>ユーザーネーム：<%= note.user.name %></p>
  <p><%= link_to "#{note.comments.count} コメント", note_path(note.id) %></p>
</div>
<% end %>
<%= paginate @notes %>