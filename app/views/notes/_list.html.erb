<div class="card-list-containar py-5">
  <% notes.each do |note| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to note_path(note.id) do %>
      <%= attachment_image_tag note, :image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag note.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(note_path(note.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= note.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">本文：<%= note.body %></p>
          <span><i class="fas fa-user"></i> By <%= note.user.name %> ｜ </span>
          <span><%= link_to "#{note.comments.count} コメント", note_path(note.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate notes %>
</div>